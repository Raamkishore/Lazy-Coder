n = int(input())
m = [["*" for x in range(n)] for y in range(n)]
l = 0
h = n - 1
p = 0
for i in range(1):
    for j in range(n):
        p += 1
        m[i][j] = p
    for j in range(l+1, h+1):
        p -= 1
        m[j][h] = p
    for j in range(h-1, l-1, -1):
        p += 1
        m[h][j] = p
    for j in range(h-1, l, -1):
        p -= 1
        m[j][i] = p

for i in range(n):
    for j in range(n):
        print(m[i][j], end = " ")
    print()
